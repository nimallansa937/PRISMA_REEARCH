# Copy this to .env and fill in your API keys

# ===== LLM API KEYS (for AI-powered search) =====
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_key_here

# Get from: https://platform.deepseek.com/api_keys  
DEEPSEEK_API_KEY=your_deepseek_key_here

# ===== OPTIONAL: Academic Database API Keys =====
# Optional: Semantic Scholar (get from https://www.semanticscholar.org/product/api)
SEMANTIC_SCHOLAR_API_KEY=

# Optional: NCBI API key for PubMed (get from https://www.ncbi.nlm.nih.gov/account/)
NCBI_API_KEY=

# ===== Search Parameters =====
MIN_PAPERS_REQUIRED=50
MIN_YEAR=2000
MIN_QUALITY_SCORE=0.3
REQUIRE_DOI=false
